{{#if addNewEvent}}
  <div>
    <form>
      <div class="form-group">
        <label for="creator">Creator</label>
        {{input value=creator id="creator"}}
      </div>

      <div class="form-group">
        <label for="time">Time</label>
        {{input value=time id="time"}}
      </div>

      <div class="form-group">
        <label for="information">Information</label>
        {{input value=information id="information"}}
      </div>

      <button {{action 'saveEvent'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'eventFormShow'}}>New Rental</button>
{{/if}}
