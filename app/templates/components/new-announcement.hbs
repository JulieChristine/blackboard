{{#if newAnnouncementForm}}
  <h1>New Announcement</h1>
  <div>
    <form {{action "saveAnnouncement" on="submit"}}>
      <div class="form-group">
        <label for="date">Date: </label>
        {{input type="date" value=date id="date" placeholder="yyyy-mm-dd" required=true}}
      </div>

      <div class="form-group">
        <label for="content">Content: </label>
        {{input value=content id="content" placeholder="content" required=true}}
      </div>

      <div class="form-group">
        <label for="author">Author: </label>
        {{input value=author id="author" placeholder="author" required=true}}
      </div>

      <button type="submit">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
