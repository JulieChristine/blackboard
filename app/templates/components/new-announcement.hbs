{{#if newAnnouncementForm}}
  <div class="borderBox">
    <h1>New Announcement</h1>
    <div>
      <form {{action "saveAnnouncement" on="submit"}}>
        <div class="form-group">
          <label for="date">Date: </label>
          {{input class="form-control" type="date" value=date id="date" placeholder="yyyy-mm-dd" required=true}}
        </div>

        <div class="form-group">
          <label for="content">Content: </label>
          {{input class="form-control" value=content id="content" placeholder="content" required=true}}
        </div>

        <div class="form-group">
          <label for="author">Author: </label>
          {{input class="form-control" value=author id="author" placeholder="author" required=true}}
        </div>

        <button class="btn" type="submit">Save</button>
      </form>
    </div>
</div>
{{else}}
  <button class="btn"{{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
