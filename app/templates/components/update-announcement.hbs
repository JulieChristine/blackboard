{{#if updateForm}}
  <h2>Update {{announcement.author}}'s anncouncement</h2>
    <div>
      <form {{action 'update' announcement on="submit"}}>
        <div class="form-group">
          <label for="date">Date: </label>
          {{input class="form-control" type="date" value=announcement.date id="date" placeholder="yyyy-mm-dd" required=true}}
        </div>

        <div class="form-group">
          <label for="content">Content: </label>
          {{input class="form-control" value=announcement.content id="content" placeholder=announcement.content required=true}}
        </div>

        <div class="form-group">
          <label for="author">Author: </label>
          {{input class="form-control" value=announcement.author id="author" placeholder=announcement.author required=true}}
        </div>
        <!-- save button -->
        <button class="btn" type="submit">Save</button>
      </form>
    </div>
  {{else}}
    <button class="btn" {{action 'updateForm'}}>Update</button>
{{/if}}

<button class="btn" {{action 'delete' announcement}}>Delete</button>
