{{#if updateForm}}
  <h4>Update {{announcement.author}}'s anncouncement</h4>
    <div>
      <form> <!-- update announcement form ++++++++++++++-->
        <div class="form-group">
          <label for="date">Date: </label>
          {{input value=date id="date" placeholder=announcement.date}}
        </div>

        <div class="form-group">
          <label for="content">Content: </label>
          {{input value=content id="content" placeholder=announcement.content}}
        </div>

        <div class="form-group">
          <label for="author">Author: </label>
          {{input value=author id="author" placeholder=announcement.author}}
        </div>

        <button {{action 'update' announcement}}>Save</button>
      </form> <!-- end of update announcement form +++++++++-->
    </div>
  {{else}}
    <button {{action 'updateForm'}}>Update</button>
{{/if}}

<button {{action 'delete' announcement}}>Delete</button>
