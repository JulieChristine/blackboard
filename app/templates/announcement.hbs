{{new-announcement saveAnnouncement="saveAnnouncement"}}

<ul>
  {{#each model as |announcement|}}
    <li>Announcement: {{announcement.content}}</li>
    <li>Date: {{announcement.date}}</li>
    <li>Author: {{announcement.author}}</li>
    {{update-announcement announcement=announcement update="update" destroyAnnouncement="destroyAnnouncement"}}
  {{/each}}
</ul>
